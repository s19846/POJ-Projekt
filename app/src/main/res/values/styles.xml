<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTextWithBorder">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/colorWhite</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="SubTextWithBorder">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>
